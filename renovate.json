{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "widen",
  "separateMinorPatch": true,
  "updateTypes": ["major", "minor", "patch"],
  "postUpgradeTasks": {
    "commands": [
      "npx --workspace @yay-machine/site msw init",
      "npx @biomejs/biome migrate --write",
      "npm run fix"
    ]
  }
}
