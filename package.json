{
  "name": "yay-machine-monorepo",
  "version": "0.0.0",
  "description": "A modern, simple, lightweight, zero-dependency, TypeScript state-machine library for the browser and server",
  "type": "module",
  "private": true,
  "files": ["src", "dist"],
  "scripts": {
    "prepare": "husky",
    "all": "bun run build && bun run fix && bun run check && bun run test",
    "check": "bun run check:types && bun run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "npx @biomejs/biome check",
    "fix": "bun run fix:lint",
    "fix:lint": "npx @biomejs/biome check --write",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ci": "turbo run test:ci",
    "bench": "turbo bench",
    "build": "turbo build",
    "docs:sync": "bun run scripts/sync-docs.ts",
    "pages": "bun run scripts/build-pages.ts",
    "pages:watch": "bun run scripts/build-pages.ts --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maurice/yay-machine.git"
  },
  "keywords": [
    "state-machine",
    "fsm",
    "state-management",
    "lightweight",
    "zero-dependency",
    "typescript",
    "browser",
    "server",
    "concise",
    "declarative",
    "deterministic",
    "safe",
    "yay"
  ],
  "author": "maurice@mauricenicholson.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maurice/yay-machine/issues"
  },
  "homepage": "https://github.com/maurice/yay-machine#readme",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@sinonjs/fake-timers": "^14.0.0",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "bun": "^1.1.45",
    "bun-types": "^1.1.42",
    "highlight.js": "^11.11.1",
    "husky": "^9.1.7",
    "marked": "^15.0.6",
    "marked-gfm-heading-id": "^4.1.1",
    "marked-highlight": "^2.2.1",
    "playwright": "^1.49.1",
    "title-case": "^4.3.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "npm@10.2.4",
  "trustedDependencies": ["@biomejs/biome"]
}
