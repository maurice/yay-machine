---
import type { State, Transition } from "./types";

const { current, start, states, transitions, direction } = Astro.props;
---

<script>
import "./YmChart";
import "./YmState";
import "./YmTransition";
</script>

<div>
    <ym-chart start={start} current={current} direction={direction}>
        {states?.map((it: string | State) => <ym-state name={typeof it === 'string' ? it : it.name}/>)}
        {transitions?.map((it: Transition) => <ym-transition from={it.from} to={it.to} label={it.label}/>)}
    </ym-chart>
</div>